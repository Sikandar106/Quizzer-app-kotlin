<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quizzer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizzerNoActionBar">
        <activity android:name=".activities.activity.ProfileActivity"
            android:theme="@style/Theme.Quizzer"
            android:parentActivityName=".activities.activity.MainActivity"></activity>
        <activity android:name=".activities.activity.ResultActivity"
            android:theme="@style/Theme.Quizzer"
            android:parentActivityName=".activities.activity.QuestionActivity"/>
        <activity
            android:name=".activities.activity.QuestionActivity"
            android:theme="@style/Theme.Quizzer"
            android:parentActivityName=".activities.activity.MainActivity"/>
        <activity android:name=".activities.activity.SignUpActivity" />
        <activity android:name=".activities.activity.LoginActivity" />
        <activity android:name=".activities.activity.IntoActivity" >
        </activity>
        <activity android:name=".activities.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>